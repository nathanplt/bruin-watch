# -----------------------------------------------------------------------------
# Backend (FastAPI on Cloud Run)
# -----------------------------------------------------------------------------
ENVIRONMENT=development
BACKEND_API_KEY=replace-with-32-plus-char-random-string
SCHEDULER_TOKEN=replace-with-32-plus-char-random-string
FRONTEND_ORIGIN=http://localhost:3000

SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Optional Twilio SMS channel:
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
ALERT_TO_NUMBER=

# Optional Gmail email channel (recommended for fastest testing):
GMAIL_SENDER=you@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
ALERT_TO_EMAIL=you@gmail.com

DEFAULT_TERM=26S
MIN_INTERVAL_SECONDS=15
# Local dev convenience: if unset, backend enables local scheduler when ENVIRONMENT=development.
LOCAL_SCHEDULER_ENABLED=true
LOCAL_SCHEDULER_INTERVAL_SECONDS=60

# -----------------------------------------------------------------------------
# Frontend (Next.js on Vercel)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=BruinWatch
BACKEND_BASE_URL=http://127.0.0.1:8000
SESSION_SECRET=replace-with-32-plus-char-random-secret
ADMIN_EMAIL=admin@example.com
# Local dev fallback:
ADMIN_PASSWORD=replace-with-plain-password-for-local-only
# Production required bcrypt hash.
# If you store this in .env files parsed by Next, escape $ as \$
ADMIN_PASSWORD_HASH=\$2b\$12\$replace_with_bcrypt_hash
